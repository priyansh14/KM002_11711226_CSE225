<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="#000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infotv"
        android:layout_marginTop="90dp"
        android:textAlignment="center"
        android:text="This app lets you find out the square and cube of any number.
        Enter the number below and click on Calculate button. Then switch tabs from the nav bar to see results"
        android:textColor="#FFD700"
        />
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_height="60dp"
        android:id="@+id/MAIN_NUMTV"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="100dp"
        android:textSize="20dp"
        android:gravity="center"

        android:text="Pass A Number"
        android:background="#FFD700"


        android:textColor="#000"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="450dp"
        android:id="@+id/ETNUMBER"
        android:layout_marginLeft="100dp"
        android:background="#FFD700"
        android:textColor="#000"
        android:hint="e.g 2,3,4,66"
        android:textAlignment="center"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/calc"
        android:background="#FFD700"
        android:textColor="#000"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="150dp"/>



</FrameLayout>